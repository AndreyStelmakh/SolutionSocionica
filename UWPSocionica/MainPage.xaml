<Page
    x:Class="UWPSocionica.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPSocionica.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary Source="/Themes/Generic.xaml"/>
    </Page.Resources>
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Калькулятор соционика" FontSize="36" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.ColumnSpan="3"/>
        <TextBlock Grid.Row="1" Text="Признаки" Padding="8,0,0,0" HorizontalAlignment="Left"/>
        <ScrollViewer Grid.Row="2">
            <StackPanel HorizontalAlignment="Left" Padding="0,0,0,20" x:Name="_featuresStackPanel" x:Uid="_featuresStackPanel">
                <local:CheckBox_Feature Content="Экстраверсия" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Интроверсия" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Интуиция" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Сенсорика" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Логика" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Этика" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Статика" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Динамика" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Позитивизм" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Негативизм" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Квестимность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Деклатимность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Тактика" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Стратегия" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Конструктивизм" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Эмотивизм" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Рациональность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Иррациональность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Процесс" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Результат" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Уступчивость" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Упрямость" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Беспечность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Предусмотрительность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Рассудительность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Решительность" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Весёлый" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Серьёзный" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Аристократизм" Click="CheckBox_Click"/>
                <local:CheckBox_Feature Content="Демократизм" Click="CheckBox_Click"/>
            </StackPanel>
        </ScrollViewer>
        <TextBlock Text="Психотипы" Grid.Row="1" Grid.Column="2" Padding="8,0,0,0"/>
        <StackPanel HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" x:Name="_psychoTypesStackPanel">
            <local:CheckBox_Hero Content="Дон Кихот" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Дюма" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Гюго" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Робеспьер" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Гамлет" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Максим" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Жуков" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Есенин" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Наполеон" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Бальзак" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Джек" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Драйзер" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Штирлиц" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Достоевский" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Гексли" Click="CheckBox_Click"/>
            <local:CheckBox_Hero Content="Габен" Click="CheckBox_Click"/>
        </StackPanel>
        <HyperlinkButton Content="https://github.com/AndreyStelmakh/SolutionSocionica" NavigateUri="https://github.com/AndreyStelmakh/SolutionSocionica" Margin="0,10,0,0" Grid.Row="4" Grid.ColumnSpan="3"/>
    </Grid>
</Page>
