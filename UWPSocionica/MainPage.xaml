<Page
    x:Class="UWPSocionica.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPSocionica.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary Source="/Themes/Generic.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Калькулятор соционика" FontSize="36" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.ColumnSpan="2"/>
        <StackPanel HorizontalAlignment="Center" Grid.Row="1">
            <local:DualControl x:Name="ЭкстраИнтро" FirstFeature="Экстраверсия" SecondFeature="Интроверсия"/>
            <local:DualControl FirstFeature="Интуиция" SecondFeature="Сенсорика"/>
            <local:DualControl FirstFeature="Логика" SecondFeature="Этика" />
            <local:DualControl FirstFeature="Статика" SecondFeature="Динамика" />
            <local:DualControl FirstFeature="Позитивизм" SecondFeature="Негативизм" />
            <local:DualControl FirstFeature="Квестимность" SecondFeature="Деклатимность" />
            <local:DualControl FirstFeature="Тактика" SecondFeature="Стратегия" />
            <local:DualControl FirstFeature="Конструктивизм" SecondFeature="Эмотивизм" />
            <local:DualControl FirstFeature="Рациональность" SecondFeature="Иррациональность" />
            <local:DualControl FirstFeature="Процесс" SecondFeature="Результат" />
            <local:DualControl FirstFeature="Уступчивость" SecondFeature="Упрямость" />
            <local:DualControl FirstFeature="Беспечность" SecondFeature="Предусмотрительность" />
            <local:DualControl FirstFeature="Рассудительность" SecondFeature="Решительность" />
            <local:DualControl FirstFeature="Весёлый" SecondFeature="Серьёзный" />
            <local:DualControl FirstFeature="Аристократизм" SecondFeature="Демократизм" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <local:CheckBox_Hero Content="Дон Кихот" />
            <local:CheckBox_Hero Content="Дюма"/>
            <local:CheckBox_Hero Content="Гюго"/>
            <local:CheckBox_Hero Content="Робеспьер"/>
            <local:CheckBox_Hero Content="Гамлет"/>
            <local:CheckBox_Hero Content="Максим"/>
            <local:CheckBox_Hero Content="Жуков"/>
            <local:CheckBox_Hero Content="Есенин"/>
            <local:CheckBox_Hero Content="Наполеон"/>
            <local:CheckBox_Hero Content="Бальзак"/>
            <local:CheckBox_Hero Content="Джек"/>
            <local:CheckBox_Hero Content="Драйзер"/>
            <local:CheckBox_Hero Content="Штирлиц"/>
            <local:CheckBox_Hero Content="Достоевский"/>
            <local:CheckBox_Hero Content="Гексли"/>
            <local:CheckBox_Hero Content="Габен"/>
        </StackPanel>

    </Grid>
</Page>
